{
    "name": "alexa-ts-express-starter",
    "version": "0.1.0",
    "description": "A starter template for self-hosted Amazon Alexa Skill using TypeScript, NodeJS and ExpressJS.",
    "repository": {
        "type": "git",
        "url": "https://github.com/vishalbiswas/alexa-ts-express-starter"
    },
    "author": "Vishal Biswas",
    "license": "MIT",
    "scripts": {
        "start": "npm run serve",
        "build": "npm run build-ts && npm run lint",
        "serve": "node dist/server.js",
        "watch-node": "nodemon dist/server.js",
        "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
        "build-ts": "tsc",
        "watch-ts": "tsc -w",
        "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
        "debug": "npm run build && npm run watch-debug",
        "serve-debug": "nodemon --inspect dist/server.js",
        "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\""
    },
    "dependencies": {
        "ask-sdk-core": "^2.8.0",
        "ask-sdk-express-adapter": "^2.1.0",
        "ask-sdk-model": "^1.28.0",
        "async": "^3.1.0",
        "body-parser": "^1.19.0",
        "compression": "^1.7.4",
        "dotenv": "^8.2.0",
        "errorhandler": "^1.5.1",
        "express": "^4.17.1",
        "lodash": "^4.17.19",
        "mysql": "^2.18.1",
        "winston": "^3.2.1"
    },
    "devDependencies": {
        "@types/async": "^3.0.2",
        "@types/body-parser": "^1.17.1",
        "@types/compression": "^1.0.1",
        "@types/concurrently": "^5.2.1",
        "@types/errorhandler": "^1.5.0",
        "@types/eslint": "^6.1.1",
        "@types/express": "^4.17.1",
        "@types/lodash": "^4.14.141",
        "@types/mysql": "^2.15.13",
        "@types/node": "^12.12.43",
        "@typescript-eslint/eslint-plugin": "^2.34.0",
        "@typescript-eslint/parser": "^2.34.0",
        "concurrently": "^5.0.0",
        "eslint": "^6.8.0",
        "nodemon": "^2.0.4",
        "ts-loader": "^7.0.5",
        "ts-node": "^8.4.1",
        "typescript": "^3.6.3"
    }
}
